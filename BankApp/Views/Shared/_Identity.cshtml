@using BankApp.Data.Models;
@using Microsoft.AspNetCore.Identity;
@inject UserManager<ApplicationUser> UserManager;

@if (!User.Identity.IsAuthenticated)
{
   
} else
{
    <button class="btn btn-outline-success" type="button" id="profile-btn"
            aria-expanded="false">
        <i class="bi bi-person-badge"></i> Hello, @UserManager.GetUserName(User)
    </button>
<form asp-controller="Auth" asp-action="Logout">
    <button class="btn btn-outline-danger my-2 my-sm-0 d-flex justify-content-end">
        <i class="bi bi-box-arrow-in-right"></i> Log out
    </button>
</form>
}